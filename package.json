{
  "name": "ncodr",
  "version": "0.12.0",
  "type": "module",
  "description": "Encoding/Ripping Queue",
  "engines": {
    "node": ">= 15.0.0"
  },
  "main": "index.js",
  "files": [
    "build",
    "config",
    "node_modules",
    "LICENSE",
    "README"
  ],
  "scripts": {
    "test": "NODE_ENV=test LOG_LEVEL=error c8 mocha ./test/unit/**/*.test.js",
    "serve": "nodemon index.js | pino-clf -a 1 -d 2 | pino-pretty -t",
    "lint": "eslint .",
    "jsdoc": "jsdoc",
    "build": "rm -rf build && backpack build",
    "version": "node -e 'console.log(require(\"./package.json\").version)'",
    "docker": "docker build -t aztechian/ncodr:$(npm run -s version) .",
    "start": "node build/main.js | pino-clf -a 1 -d 2 | pino-pretty -t"
  },
  "c8": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "lcovonly",
      "text",
      "text-summary",
      "html"
    ]
  },
  "repository": "git+https://github.com/aztechian/ncodr.git",
  "keywords": [
    "encode",
    "queue",
    "handbrake",
    "avconv",
    "dvdbackup",
    "makemkv"
  ],
  "author": "Ian Martin <ian@imartin.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aztechian/ncodr/issues"
  },
  "homepage": "https://github.com/aztechian/ncodr#readme",
  "dependencies": {
    "atob": "^2.0.0",
    "bluebird": "^3.0.0",
    "body-parser": "^1.0.0",
    "bull": "*",
    "cheerio": "*",
    "chownr": "^2.0.0",
    "compression": "^1.0.0",
    "config": "^3.0.0",
    "express": "^4.18.2",
    "got": "^13.0.0",
    "helmet": "^7.0.0",
    "js-yaml": "^4.0.0",
    "jsonwebtoken": "^9.0.0",
    "keyv": "^4.0.0",
    "ncodr-ui": "github:aztechian/ncodr-ui#v1.4.0",
    "parse-cache-control": "^1.0.1",
    "pino": "^8.0.0",
    "pino-clf": "^1.0.0",
    "pino-http": "^8.0.0",
    "pino-pretty": "^10.0.0",
    "source-map-support": "^0.5.13",
    "sse-express": "^1.0.2"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "chai": "*",
    "chai-as-promised": "*",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "jsdoc": "^3.6.3",
    "mocha": "^10.0.0",
    "mock-spawn": "*",
    "nock": "*",
    "nodemon": "^3.0.1",
    "sinon": "^16.0.0",
    "sinon-chai": "^3.0.0",
    "sinon-express-mock": "^2.0.0"
  },
  "private": false
}
